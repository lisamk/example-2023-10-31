@model Example.Web.ViewModels.Home.IndexViewModel

<div class="text-center">
    <h1 class="display-4">Please register</h1>
</div>

@if (Model.ShowSuccessMessage)
{
    <div class="alert alert-success mt-5 mb-3" role="alert">
        Thank you, your registration has been saved successfully.
    </div>
}

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger mt-5 mb-3" role="alert">
        @Model.ErrorMessage
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="FirstName">Your first name:</label>
        <input asp-for="FirstName" class="form-control" placeholder="eg. Steve">
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="LastName">Your last name:</label>
        <input asp-for="LastName" class="form-control" placeholder="eg. Jobs">
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Email">Your email-address:</label>
        <input asp-for="Email" class="form-control" placeholder="eg. steve@jobs.com">
        <span asp-validation-for="Email"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>